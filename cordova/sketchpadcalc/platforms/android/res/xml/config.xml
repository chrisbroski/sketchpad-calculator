<?xml version='1.0' encoding='utf-8'?>
<widget id="com.chaosscape.sketchpadcalc" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <preference name="orientation" value="portrait" />
    <name>Sketchpad Calculator</name>
    <description>
        Work with numbers on your phone like you do with pencil and paper.
    </description>
    <author email="chrisbroski@gmail.com" href="http://www.chaosscape.com">
        Chris Broski
    </author>
    <icon density="mdpi" src="www/img/icon-mdpi.png" />
    <icon density="hdpi" src="www/img/icon.png" />
    <icon density="xhdpi" src="www/img/icon-xhdpi.png" />
    <content src="index.html" />
    <access origin="*" />
</widget>
