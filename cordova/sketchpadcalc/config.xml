<?xml version='1.0' encoding='utf-8'?>
<widget id="com.chaosscape.sketchpadcalc" version="0.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sketchpad Calculator</name>
    <description>Work with numbers on your phone like you do with pencil and paper.</description>
    <author email="chrisbroski@gmail.com" href="http://www.chaosscape.com">Chris Broski</author>

    <icon src="www/img/icon-mdpi.png" density="mdpi" />
    <icon src="www/img/icon.png" density="hdpi" />
    <icon src="www/img/icon-xhdpi.png" density="xhdpi" />
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="" />
    <platform name="android">
        <preference name="orientation" value="portrait" />
    </platform>
    <platform name="ios">
        <icon src="www/img/icon-180.png" width="180" height="180" />
        <icon src="www/img/icon-60.png" width="60" height="60" />
        <icon src="www/img/icon-120.png" width="120" height="120" />
        <icon src="www/img/icon-76.png" width="76" height="76" />
        <icon src="www/img/icon-152.png" width="152" height="152" />
    </platform>
</widget>
