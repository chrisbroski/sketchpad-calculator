<?xml version='1.0' encoding='utf-8'?>
<widget id="com.chaosscape.sketchpadcalc" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sketchpad Calculator</name>
    <description>
        Work with numbers on your phone like you do with pencil and paper.
    </description>
    <author email="chrisbroski@gmail.com" href="http://www.chaosscape.com">
        Chris Broski
    </author>
    <icon src="www/img/icon-mdpi.png" density="mdpi" />
    <icon src="www/img/icon.png" density="hdpi" />
    <icon src="www/img/icon-xhdpi.png" density="xhdpi" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <platform name="android">
        <preference name="orientation" value="portrait" />
    </platform>
    <platform name="ios">
    </platform>
</widget>
